{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "inputs": [
        "src/**/*",
        "package.json",
        "tailwind.config.cjs",
        "webpack.config.js"
      ],
      "outputs": ["dist/**", ".vercel/output/**"]
    },
    "build:node18": {
      "inputs": [
        "src/**/*",
        "package.json",
        "tailwind.config.cjs",
        "webpack.config.js"
      ],
      "outputs": ["dist/**", ".vercel/output/**"]
    },
    "build:dev": {
      "inputs": [
        "src/**/*",
        "package.json",
        "tailwind.config.cjs",
        "webpack.config.js"
      ],
      "outputs": ["dist/**", "!dist/dev-server.js", ".vercel/output/**"]
    }
  }
}
