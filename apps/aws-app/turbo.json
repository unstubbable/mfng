{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "inputs": [
        "src/**/*",
        "package.json",
        "tailwind.config.cjs",
        "webpack.config.js"
      ],
      "outputs": ["dist/**"]
    },
    "build:dev": {
      "inputs": [
        "src/**/*",
        "package.json",
        "tailwind.config.cjs",
        "webpack.config.js"
      ],
      "outputs": ["dist/**"]
    }
  }
}
